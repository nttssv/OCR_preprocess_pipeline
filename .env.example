# Environment Configuration for Document Processing Pipeline API
# Copy this file to .env and update values as needed

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# File Processing  
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./api_uploads
OUTPUT_DIR=./processed_documents
TEMP_DIR=./api_temp
CACHE_DIR=./api_cache

# Database
DATABASE_URL=sqlite:///./api_documents.db

# Processing
MAX_WORKERS=4
TASK_TIMEOUT=300
DEFAULT_DPI=250

# Performance & Caching
LARGE_FILE_THRESHOLD=52428800  # 50MB
PROCESSING_TIME_THRESHOLD=120  # 2 minutes
ENABLE_CACHING=True
CACHE_EXPIRY_HOURS=24
MAX_CACHE_SIZE=1073741824  # 1GB

# Cleanup
CLEANUP_TEMP_FILES=True
CLEANUP_AFTER_HOURS=48

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/api.log

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080